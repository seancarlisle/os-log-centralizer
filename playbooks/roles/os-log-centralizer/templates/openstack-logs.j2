{% for host in groups['keystone_all'] %}
if $hostname == '{{ host | regex_replace('_', '-') }}' then {
   if $programname == 'keystone-apache-error'  then /var/log/openstack/{{ host | regex_replace('_', '-') }}-keystone-apache-error.log

   if $programname == 'keystone' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-keystone.log

   if $programname == 'ssl_access' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-ssl_access.log   

   if $programname == 'error' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-apache-error.log 

   if $programname == 'access' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-apache-access.log

   if $programname == 'other-vhost-access' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-apache-other-vhost-access.log

   if $programname == 'shibd' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-shibboleth-shibd.log

   if $programname == 'shibd_warn' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-shibboleth-shibd_warn.log

   if $programname == 'signature' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-shibboleth-signature.log

   if $programname == 'transaction' then /var/log/openstack/{{ host | regex_replace('_', '-') }}-shibboleth-transaction.log
}
{% endfor %}


